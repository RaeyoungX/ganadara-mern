{
  "compilerOptions": {
    /* 输入与输出路径 */
    "rootDir": "src",
    "outDir": "dist",

    /* 模块系统与编译目标 */
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* 类型支持 */
    "lib": ["ESNext"],
    "types": ["node"],

    /* 严格模式与检查 */
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* 调试支持 */
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
